<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:minWidth="1000dp"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:scaleType="centerCrop"
    android:src="@drawable/cbse1"
    />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:background="@color/colorbutton"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="20sp"
                android:id="@+id/topic"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="JAVA : JAVA BASICS"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_height="wrap_content"
                android:text="Total Number Of Questions :"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="15"
                android:id="@+id/no_of_que"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_height="wrap_content"
                android:text="Time(In Minutes) :"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="15"
                android:id="@+id/time"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textColor="#333"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Total Marks :"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="15"
                android:id="@+id/total_marks"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"

                android:layout_weight="3"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_height="wrap_content"
                android:text="Marks For Correct Answer :"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="1"
                android:id="@+id/each_que_mark"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:text="Start Exam"
    android:onClick="start_exam"
    android:textColor="#fff"
    />

        </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:onClick="closethis"
        android:clickable="true"
        android:paddingTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_height="40dp" />

</RelativeLayout>