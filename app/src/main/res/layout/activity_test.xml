<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    class="com.ExodiaSolutions.numeric.testme.Test"
    tools:context="com.ExodiaSolutions.numeric.testme.Test">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:elevation="12dp"
            android:background="@color/colorPrimary"
            android:layout_height="50dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:textSize="22sp"
                />
           <ImageView
                android:layout_width="40dp"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:onClick="showInfo"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dashboard_white_24dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#00e676"
            android:baselineAligned="false"
            android:padding="3dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="3dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/buttons_bk"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_timer_white_48dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="  Timer"
                    android:id="@+id/timertv"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"/></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/buttons_bk"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:onClick="submit"
                android:clickable="true"
                android:padding="3dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_done_white_48dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="   Finish"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginBottom="10dp"
        android:layout_height="51dp">

        <Button
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom|left"
            android:padding="5dp"
            android:background="@drawable/buttons_bk"
            android:onClick="previous"
            android:textColor="#fff"
            android:text="&lt;"
            android:id="@+id/pre_btn"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttons_bk"
            android:onClick="next"
            android:text=">"
            android:textColor="#fff"
            android:textSize="30sp"
            />
    </RelativeLayout>
</LinearLayout>



